@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Hola, @context.User.Identity.Name</a>
        <form action="/Identity/Account/Logout?returnUrl=%2F" method="post">
            <button type="submit" class="nav-link btn btn-primary">Salir</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Registrarse</a>
        <a href="Identity/Account/Login">Iniciar Sesion</a>
    </NotAuthorized>
</AuthorizeView>