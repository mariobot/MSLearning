@page "/navmenutree"

@* @attribute [RenderModeInteractiveServer(false)] *@

<h3>NavMenu Tree</h3>

<h2>Navigation Examples</h2>

<FluentStack Orientation="Orientation.Horizontal">
    <!-- Menu with sub-items and icons -->    
    <FluentNavMenuTree Collapsible="false" Title="Navigation  demo" Id="MyMenu">
         <FluentNavMenuLink Text="Item 1" Icon="@(new Icons.Regular.Size24.Home())" Href="" />
        <FluentNavMenuLink Text="Item 2" Href="" />
        <FluentNavMenuGroup Text="Item 3" Href="">
            <FluentNavMenuLink Text="Item 3.1" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="" />
            <FluentNavMenuLink Text="Item 3.2" Icon="@(new Icons.Regular.Size24.LeafTwo())" Href="" />
        </FluentNavMenuGroup>
        <FluentNavMenuGroup Text="Item 4" @onclick="OnClick" Href="">
            <FluentNavMenuLink Text="Item 4.1" @onclick="OnClick" Href="" />
            <FluentNavMenuLink Text="Item 4.2" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="" />
        </FluentNavMenuGroup>
        <FluentNavMenuGroup Text="Item 5" @onclick="OnClick" Href="">
            <FluentNavMenuLink Text="Item 5.1" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafTwo())" Href="" />
            <FluentNavMenuGroup @onclick="OnClick" Text="Item 5.2" Href="">
                <FluentNavMenuLink Text="Item 5.2.1" @onclick="OnClick" Href="" />
                <FluentNavMenuLink Text="Item 5.2.2" @onclick="OnClick" Href="" />
            </FluentNavMenuGroup>
            <FluentNavMenuGroup @onclick="OnClick" Text="Item 5.3" Href="">
                <FluentNavMenuLink Text="Item 5.3.1" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="" />
                <FluentNavMenuLink Text="Item 5.3.2" @onclick="OnClick" Href="" />
            </FluentNavMenuGroup>
        </FluentNavMenuGroup>
        <FluentNavMenuGroup @onclick="OnClick" Text="Items with Href">
            <FluentNavMenuLink Text="Go to Bing" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="https://bing.com" />
            <FluentNavMenuLink Text="Go to home page" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.Home())" Href="" />
        </FluentNavMenuGroup>
        <FluentNavMenuLink Text="Last item" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafThree())" Disabled="true" />
    </FluentNavMenuTree>

    <br />
    <br />

    <h3>Menu with icons</h3>
    <!-- Menu with icons -->   
    <FluentNavMenuTree>
        <FluentNavMenuLink Text="Item 1" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.Home())" Href="" />
        <FluentNavMenuLink Text="Item 2" @onclick="OnClick" Href="" />
        <FluentNavMenuLink Text="Item 3" @onclick="OnClick" Icon="@(new Icons.Regular.Size24.LeafOne())" Href="" />
        <FluentNavMenuLink Text="Item 4" @onclick="OnClick" Href="" />
    </FluentNavMenuTree>

    <br />
    <br />

    <h3>Simple menu</h3>

    <!-- Menu simple -->
    <FluentNavMenuTree>
        <FluentNavMenuLink Text="Item 1" @onclick="OnClick" Href="" />
        <FluentNavMenuLink Text="Item 2" @onclick="OnClick" Href="" />
        <FluentNavMenuLink Text="Item 3" @onclick="OnClick" Href="" />
        <FluentNavMenuLink Text="Item 4" @onclick="OnClick" Href="" />
    </FluentNavMenuTree>

</FluentStack>
